data &zbior._score;
set &zbior;
SCORECARD_POINTS = 0;
select;
when ( not missing(ACT_CINS_N_STATB) and ACT_CINS_N_STATB <= 0 ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,67);
PSC_ACT_CINS_N_STATB=67;
end;
when ( 0 < ACT_CINS_N_STATB or missing(ACT_CINS_N_STATB) ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_ACT_CINS_N_STATB=58;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_ACT_CINS_N_STATB=58;
end; end;
select (APP_CHAR_GENDER );
  when ('Female')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,62);
PSC_APP_CHAR_GENDER=62;
end;
  when ('Male')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_APP_CHAR_GENDER=58;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_APP_CHAR_GENDER=58;
end; end;
select (APP_CHAR_JOB_CODE );
  when ('Permanent')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,120);
PSC_APP_CHAR_JOB_CODE=120;
end;
  when ('Retired')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,109);
PSC_APP_CHAR_JOB_CODE=109;
end;
  when ('Owner company')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,103);
PSC_APP_CHAR_JOB_CODE=103;
end;
  when ('Contract')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_APP_CHAR_JOB_CODE=58;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_APP_CHAR_JOB_CODE=58;
end; end;
select;
when ( 1503 < APP_INCOME <= 4923 ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,62);
PSC_APP_INCOME=62;
end;
when ( (not missing(APP_INCOME) and APP_INCOME <= 1503) or 4923 < APP_INCOME ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_APP_INCOME=58;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_APP_INCOME=58;
end; end;
select;
when ( 240 < APP_SPENDINGS <= 2220 ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,64);
PSC_APP_SPENDINGS=64;
end;
when ( (not missing(APP_SPENDINGS) and APP_SPENDINGS <= 240) or 2220 < APP_SPENDINGS ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_APP_SPENDINGS=58;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,58);
PSC_APP_SPENDINGS=58;
end; end;
run;
