data &zbior._score;
set &zbior;
SCORECARD_POINTS = 0;
select;
when ( not missing(ACT_CINS_N_STATB) and ACT_CINS_N_STATB <= 0 ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,138);
PSC_ACT_CINS_N_STATB=138;
end;
when ( missing(ACT_CINS_N_STATB) ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,102);
PSC_ACT_CINS_N_STATB=102;
end;
when ( 0 < ACT_CINS_N_STATB ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,86);
PSC_ACT_CINS_N_STATB=86;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,86);
PSC_ACT_CINS_N_STATB=86;
end; end;
select (APP_CHAR_GENDER );
  when ('Female')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,105);
PSC_APP_CHAR_GENDER=105;
end;
  when ('Male')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,86);
PSC_APP_CHAR_GENDER=86;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,86);
PSC_APP_CHAR_GENDER=86;
end; end;
select (APP_CHAR_JOB_CODE );
  when ('Retired')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,103);
PSC_APP_CHAR_JOB_CODE=103;
end;
  when ('Permanent')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,90);
PSC_APP_CHAR_JOB_CODE=90;
end;
  when ('Owner company')   do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,86);
PSC_APP_CHAR_JOB_CODE=86;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,86);
PSC_APP_CHAR_JOB_CODE=86;
end; end;
select;
when ( not missing(APP_SPENDINGS) and APP_SPENDINGS <= 960 ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,94);
PSC_APP_SPENDINGS=94;
end;
when ( 960 < APP_SPENDINGS ) do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,86);
PSC_APP_SPENDINGS=86;
end;
otherwise do;
SCORECARD_POINTS=sum(SCORECARD_POINTS,86);
PSC_APP_SPENDINGS=86;
end; end;
run;
